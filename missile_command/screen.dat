SCADDR
;;; column start addresses for hi-res screen
COL       set 0
          repeat SCRCOLS
          dc.w SCREEN + (COL * SCRROWS)
COL       set COL + 1
          repend
SCADDR_SZ equ * - SCADDR 

;;; the character tiles in screen memory
;;; that comprise the hi-res screen
;;; as vertical strips i.e.
;;; the first strip would be:
;;; column 0123456 ...
;;;        ----------------------------
;;;        Axy
;;;        Bxy
;;;        Cxy
;;; etc ...
SCRMAP
ROW       set 0
          repeat SCRROWS
COL       set 0
            repeat SCRCOLS
            dc.b ROW + COL * SCRROWS
COL         set COL + 1          
            repend
ROW       set ROW + 1          
          repend
SCRMAP_SZ equ * - SCRMAP
