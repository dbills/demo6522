SCADDR
;;; screen column addresses for chargen ram
;;; on the hi-res screen
;;; column 0 would be start in chram for 'A'
;;; column 1 would be start in chram for letter 'A' + SCRROWS
;;; etc.
COL       set 0
          repeat SCRCOLS
          dc.w CHBASE1 + (COL * SCRROWS * CHARHT)
COL       set COL + 1
          repend
SCADDR_SZ equ * - SCADDR 

;;; the character tiles in screen memory
;;; that comprise the hi-res screen
;;; as vertical strips i.e.
;;; the first strip would be:
;;; column 0123456 ...
;;;        ----------------------------
;;;        Axy
;;;        Bxy
;;;        Cxy
;;; etc ...
SCRMAP
ROW       set 0
          repeat SCRROWS
COL       set 0
            repeat SCRCOLS
            dc.b ROW + COL * SCRROWS
COL         set COL + 1          
            repend
ROW       set ROW + 1          
          repend
SCRMAP_SZ equ * - SCRMAP

BMASKS    
BPOS      set 128
          repeat 8
          dc.b BPOS
BPOS      set BPOS >> 1
          repend          
BMASKS_SZ
